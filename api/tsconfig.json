{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@database": ["src/config/database.ts"],
      "@app": ["src/config/app.ts"],
      "@env": ["src/config/env.ts"],

      "@controllers/*": ["src/controllers/*"],
      "@middlewares/*": ["src/middlewares/*"],
      "@routes/*": ["src/routes/*"],
      "@models/*": ["src/models/*"]
   }
  }
}
